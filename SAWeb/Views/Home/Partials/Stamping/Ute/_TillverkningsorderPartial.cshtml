<div class="pull-right" id="DivTable" style="height:510px; border: none; border-radius: 5px; border-width:1px; width:100%;">
    <table class="table, pull-right" id="" style="border: none; border-color: gray; width:100%;">
        <thead style="table-layout: fixed; ">
            <tr>
                <!--Skapar våra "Search Inputs" för att söka varje kolumn.-->
                <th style="white-space: nowrap; ">
                    <button ng-click="clearSearch()" style="width: 20px; border: none;">
                        <img src="~/Content/img/CloseRed.png" style="width: 250%; min-width: 22%; margin-left: -6px;" />
                    </button>
                    <input ng-model="search.ProductionOrderNo" style="width:73%;" />
                </th>
                <th><input ng-model="search.Prio" /></th>
                <th><input ng-model="search.Description" /></th>
                <th><input ng-model="search.CustomerName" /></th>
                <th><input ng-model="search.CustomerOrderNo" /></th>
                <th><input ng-model="search.ArticleNo" /></th>
                <th><input ng-model="search.ReadyDate" /></th>
                <th><input ng-model="search.DeliveryDate" /></th>
                <th><input ng-model="search.Quantity" /></th>
                <th><input ng-model="search.Drawing" /></th>
                <th><input ng-model="search.DrawingRevision" /></th>
                
                
            </tr>
        </thead>

        <!--Skapar våra headers. Används också till sortering.-->
        <thead class="tablebgblue">
            <tr style="border: solid; border-color: gray; border-width: 1px;">
                <th>
                    <button ng-click="sortType = 'ProductionOrderNo'; sortReverse = !sortReverse">
                        Order
                        <span ng-show="sortType == 'ProductionOrderNo' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'ProductionOrderNo' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'Prio'; sortReverse = !sortReverse">
                        Prio
                        <span ng-show="sortType == 'Prio' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'Prio' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'Description'; sortReverse = !sortReverse">
                        Benämning
                        <span ng-show="sortType == 'Description' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'Description' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'CustomerName'; sortReverse = !sortReverse">
                        Kund
                        <span ng-show="sortType == 'CustomerName' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'CustomerName' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'CustomerOrderNo'; sortReverse = !sortReverse">
                        Kund.Ord
                        <span ng-show="sortType == 'CustomerOrderNo' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'CustomerOrderNo' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'ArticleNo'; sortReverse = !sortReverse">
                        Artikel
                        <span ng-show="sortType == 'ArticleNo' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'ArticleNo' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'ReadyDate'; sortReverse = !sortReverse">
                        Start
                        <span ng-show="sortType == 'ReadyDate' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'ReadyDate' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'DeliveryDate'; sortReverse = !sortReverse">
                        Lev.Datum
                        <span ng-show="sortType == 'DeliveryDate' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'DeliveryDate' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'CustomerQuantity'; sortReverse = !sortReverse">
                        Antal
                        <span ng-show="sortType == 'CustomerQuantity' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'CustomerQuantity' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'Drawing'; sortReverse = !sortReverse">
                        Ritning
                        <span ng-show="sortType == 'Drawing' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'Drawing' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>
                <th>
                    <button ng-click="sortType = 'DrawingRevision'; sortReverse = !sortReverse">
                        Ritning Rev
                        <span ng-show="sortType == 'DrawingRevision' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'DrawingRevision' && sortReverse" class="fa fa-caret-up"></span>
                    </button>
                </th>

            </tr>
        </thead>

        <tbody>
            <!--Skapar en loop som fyller i lika många rader som finns i databasen den är länkad till.-->
            <tr ng-mouseover="tableRowFunction()" ng-repeat="tillverkningsorder in UteTillverkningsorder | orderBy:sortType:sortReverse | filter:searchColumn | filter:{ProductionOrderNo: search.ProductionOrderNo, Prio: search.Prio, Description: search.Description, CustomerName: search.CustomerName, CustomerOrderNo: search.CustomerOrderNo, ArticleNo: search.ArticleNo, ReadyDate: search.ReadyDate, DeliveryDate: search.DeliveryDate, CustomerQuantity: search.CustomerQuantity, Drawing: search.Drawing, DrawingRevision: search.DrawingRevision}">
                <td>{{tillverkningsorder.ProductionOrderNo}}</td>
                <td>{{tillverkningsorder.Prio}}</td>
                <td>{{tillverkningsorder.Description}}</td>
                <td>{{tillverkningsorder.CustomerName}}</td>
                <td>{{tillverkningsorder.CustomerOrderNo}}</td>
                <td>{{tillverkningsorder.ArticleNo}}</td>
                <td>{{tillverkningsorder.ReadyDate | date:'yyyy-MM-dd'}}</td>
                <td>{{tillverkningsorder.DeliveryDate | date:'yyyy-MM-dd'}}</td>
                <td>{{tillverkningsorder.CustomerQuantity}}</td>
                <td>{{tillverkningsorder.Drawing}}</td>
                <td>{{tillverkningsorder.DrawingRevision}}</td>

                
                
            </tr>


        </tbody>
    </table>
    <a class="pull-left" href="" style="margin-left: 15px;">
        <div style="border:solid; border-width: 2px; border-color:white; border-radius: 100%; margin-right: 20px; margin-top: 1px; background-color: darkblue;">
            <img src='@Url.Content("~/Content/img/Ok.png")' style="width:25px; height: 25px; margin:20px;" />
        </div>
    </a>
    <a class="pull-left" href="" style="margin-left: 15px;">
        <div style="border:solid; border-width: 2px; border-color:white; border-radius: 100%; margin-right: 20px; margin-top: 1px; background-color: darkblue;">
            <img src='@Url.Content("~/Content/img/CloseRed.png")' style="width:25px; height: 25px; margin:20px;" />
        </div>
    </a>
    <a class="pull-left" href="" style="margin-left: 15px;">
        <div style="border:solid; border-width: 2px; border-color:white; border-radius: 100%; margin-right: 20px; margin-top: 1px; background-color: darkblue;">
            <img src='@Url.Content("~/Content/img/Ok.png")' style="width:25px; height: 25px; margin:20px;" />
        </div>
    </a>
</div>